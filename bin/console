#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'pry'
require 'stardot'

Stardot.configure! log: false do
  asdf do
    versions = (1..3).flat_map do |major|
      (2..4).map { |minor| [major, minor, 0].join '.' }
    end

    install :ruby, versions: versions
  end

  symlink do
    5.times { ln '.dotfiles/bin/', 'bin/' }
  end

  brew do
    install :fzf
  end
end
